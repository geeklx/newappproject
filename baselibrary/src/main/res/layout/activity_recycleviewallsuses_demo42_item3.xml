<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.geek.libglide47.base.GlideImageView
            android:id="@+id/iv_provider3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/animation_img1"
            app:siv_border_color="@color/white"
            app:siv_border_width="1dp"
            app:siv_pressed_alpha="0.2"
            app:siv_pressed_color="@color/gray"
            app:siv_radius="5dp" />
        <!--<ImageView-->
        <!--android:id="@+id/iv_provider3"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="120dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/animation_img1" />-->

        <TextView
            android:id="@+id/tv_provider3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CymChad"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>
